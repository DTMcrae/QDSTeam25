<%- include("templates/header") %>
    <h1>Create User</h1>
    <form action='/signupSubmit' method='post' class="p-4 p-md-5 border rounded-3 bg-body-tertiary">
        <div class="form-indication">
        <p>*Username must be between 3 and 20 characters long</p>
        </div>
        <div class="form-floating mb-3">
          <input name="email" type="email" class="form-control" id="floatingEmail" placeholder="Email">
          <label for="floatingEmail">Email</label>
        </div>
        <div class="form-indication">
          <p>*Password must include at least one uppercase letter, one lowercase letter, one number, and one special character (10~20 characters long)</p>
        </div>
        <div class="form-floating mb-3">
          <input name="password" type="password" class="form-control" id="floatingPassword" placeholder="Password">
          <label for="floatingPassword">Password</label>
        </div>
        <button class="w-100 btn btn-lg btn-primary" type="submit">Submit</button>
    </form>
<%- include("templates/footer") %>
